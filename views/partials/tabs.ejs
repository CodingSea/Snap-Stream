<div class="tabsContainer">
    <% if(currentUser){ %>
        <h1><%= currentUser.username %></h1>

        <% if(currentUser.profileImage) { %>
            <img src="<%= currentUser.profileImage %>" width="200px" height="200px" alt="post-image">
        <% } else { %>
            <img src="/images/person.png" width="200px" height="200px" alt="post-image">
        <% } %>
    <% }%>
    
    <% if(userInfo) { %>
        <br>

        <div class="userInfo">
            <label>Posts: <%= userInfo.posts %></label> |
            <label>Following: <%= userInfo.following %></label> |
            <label>Followers: <%= userInfo.followers %></label>
        </div>

        <br>
    <% } %>
    <br>
    <a href="/snap-stream/profile"><button>Profile</button></a>
    <a href="/snap-stream/search"><button>Search</button></a>
    <a href="/snap-stream/home/"><button>Home</button></a>
    <hr>
    <a href="/snap-stream/settings"><button>Settings</button></a>
    <hr>
    <a href="/auth/logout"><button>Logout</button></a>
</div>